$(function () {

    //CONTROLE DO MENU MOBILE
    $('.mobile_action').click(function () {

        if (!$(this).hasClass('active')) {
             $(this).addClass('active');
             $('.navMenu').animate({'left': '0px'}, 500);
        } else {
            $(this).removeClass('active');
            $('.navMenu').animate({'left': '-100%'}, 500);
        }
    });

    //CONTROLE DA BUSCA
    $('.mobile_busca').click(function () {

             $(this).find('span').toggleClass('icon-down-open icon-search'); 
        if (!$(this).hasClass('ativa')) {
             $(this).addClass('ativa');
             $('.main_header_nav_search').fadeIn(300);
        } else {
            $(this).removeClass('ativa');
            $('.main_header_nav_search').fadeOut(300);
        }
    });

    //HEADER
    $(window).scroll(function () {
          if($(this).scrollTop() > 200)
          {
              if (!$('.main_header').hasClass('fixed'))
              {
                  $('.main_header').stop().addClass('fixed').css('top', '-100px').animate(
                      {
                          'top': '0px'
                      }, 500);
              }
          }
          else
          {
              $('.main_header').removeClass('fixed');
          }
    });


});

